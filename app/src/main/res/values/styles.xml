<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStart">@dimen/common_toolbar_title_margin</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">@color/color_text_dark</item>
        <item name="textFillColor">@color/color_text_dark</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/color_transparent</item>
        <item name="queryBackground">@color/color_transparent</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/common_toolbar_text_size</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="IconButtonStyle" parent="OutlinedButtonStyle">
        <item name="android:paddingRight">@dimen/menu_button_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/menu_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/menu_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/menu_button_padding_vertical</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/color_icon_dark</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="DarkButton" parent="ButtonStyle">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="backgroundTint">@color/button_black_background</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/color_icon_light</item>
    </style>

    <style name="DarkButtonAddItem" parent="DarkButton">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="iconTint">@color/btn_text_color</item>
        <item name="icon">@drawable/ic_baseline_add_24</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="LightButton" parent="ButtonStyle">
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="backgroundTint">@color/button_background_blue</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/color_icon_dark</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/color_white</item>
        <item name="strokeColor">@color/color_button_border</item>
        <item name="strokeWidth">@dimen/menu_button_border_width</item>
        <item name="iconTint">@color/color_background_dark</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/color_dark_gray</item>
        <item name="boxStrokeColor">@color/color_border_gray</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/empty_animation</item>
    </style>


</resources>